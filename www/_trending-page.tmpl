<main id="{{pageName}}">
    <header class="fixed large gray-darker-bg">
        <button class="back-btn btn icon-arrow-left6 pl0em fl-left">{{pageTitle}}</button>
    </header>

    <article class="p0px mtH gray-lighter-bg pt0-5em">
        <ul class="trend-list list-unstyled m0px t-column_2 column_3">
            {{#trendList}}
            <li>
                <a href="#addWish?wishId={{id}}&trend=1" class="trend-photo block responsive-image _16x9">
                    <img src="{{photo}}" alt="{{title}}" width="150" height="100"/>
                </a>
                <span class="trend-title">{{title}}</span>
            </li>
            {{/trendList}}
        </ul>
    </article>
</main>